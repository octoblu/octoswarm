#!/bin/bash

SCRIPT_NAME="stack-ensure-service"
SERVICE_SPEC_CACHE=""

source "/usr/src/app/stack/utils" || fatal 'unable to load utils'

usage(){
  echo "USAGE: $SCRIPT_NAME <service-name>"
  echo 'Description: ensure a service is up-to-date'
  echo ''
  echo 'Arguments:'
  echo '  -h, --help        print this help text'
  echo '  -v, --version     print the version'
  echo 'Environment:'
  echo '  DEBUG             print debug output'
}

assert_required_config() {
  require_config_value '.'
  require_config_value '.services[]'
}

assert_required_params() {
  local service_name="$1"
  if [ -z "$service_name" ]; then
    fatal 'Missing service-name as first arg'
  fi
}

get_env() {
  local service_name="$1"
  get_service_spec "$service_name" '.TaskTemplate.ContainerSpec.Env[]'
}

get_env_from_file() {
  local env_file="$1"
  if [ ! -f "$env_file" ]; then
    debug "no $env_file file"
    return 1
  fi
  for env_line in $(cat "$env_file"); do
    if [ -n "$env_line" ]; then
      echo "$env_line"
    fi
  done
}

get_env_add_options() {
  local service_name="$1"
  local env_file="$2"
  local opt_env_add
  local exists
  for env_line in $(get_env_from_file "$env_file"); do
    exists='false'
    for actual_env_line in $(get_env "$service_name"); do
      if [ "$actual_env_line" == "$env_line" ]; then
        exists='true'
        break;
      fi
    done
    if [ "$exists" == "false" ]; then
      debug "needs env: $env_line"
      opt_env_add="$opt_env_add --env-add $env_line"
    fi
  done
  echo "$opt_env_add"
}

get_env_rm_options() {
  local service_name="$1"
  local env_file="$2"
  local opt_env_rm=""
  local exists
  local actual_env_var=""
  local env_var
  for actual_env_line in $(get_env "$service_name"); do
    exists='false'
    actual_env_var="$(get_env_var "$actual_env_line")"
    if [ -z "$actual_env_var" ]; then
      continue;
    fi
    for env_line in $(get_env_from_file "$env_file"); do
      env_var="$(get_env_var "$env_line")"
      if [ "$env_var" == "$actual_env_var" ]; then
        exists='true'
        break;
      fi
    done
    if [ "$exists" == "false" ]; then
      debug "removing env: $actual_env_var"
      opt_env_rm="$opt_env_rm --env-rm $actual_env_var"
    fi
  done
  echo "$opt_env_rm"
}

get_env_var() {
  local env_line="$1"
  echo "$env_line" | sed -e 's/\s*=.*//'
}

get_service_name() {
  local service="$1"
  echo "$service" | jq -r '.name'
}

get_service_spec_no_cache() {
  local service_name="$1"
  docker service inspect "$service_name" 2> /dev/null
}

get_service_spec() {
  local service_name="$1"
  local key="$2"
  if [ -z "$SERVICE_SPEC_CACHE" ]; then
    SERVICE_SPEC_CACHE="$(get_service_spec_no_cache "$service_name")" || return 1
  fi
  echo "$SERVICE_SPEC_CACHE" | jq --compact-output --raw-output ".[0].Spec${key}" 2> /dev/null
}

has_docker_socket() {
  local service_name="$1"
  local mounts
  local mountType
  local mountSource
  local mountTarget
  mounts=$(get_service_spec "$service_name" '.TaskTemplate.ContainerSpec.Mounts[]')
  local hasDockerSocket='false'
  local dockerSock='/var/run/docker.sock'
  for mount in $mounts; do
    debug 'mount' $mount
    mountType="$(echo "$mount" | jq --compact-output -r '.Type')"
    mountSource="$(echo "$mount" | jq --compact-output -r '.Source')"
    mountTarget="$(echo "$mount" | jq --compact-output -r '.Target')"
    if [ "$mountType" != "bind" ]; then
      continue
    fi
    if [ "$mountSource" != "$dockerSock" ]; then
      continue
    fi
    if [ "$mountTarget" != "$dockerSock" ]; then
      continue
    fi
    hasDockerSocket='true'
    break;
  done
  debug "has docker socket $hasDockerSocket"
  echo "$hasDockerSocket"
}

has_role() {
  local service_name="$1"
  local role="$2"
  local constraints
  constraints=$(get_service_spec "$service_name" '.TaskTemplate.Placement.Constraints[]')
  local hasRole='false'
  for constraint in $constraints; do
    debug "constraint '$constraint'"
    if [[ "$constraint" == *'node.role'* ]]; then
      debug 'constraint exists'
      hasRole='true'
      break;
    fi
  done
  debug "has role $hasRole"
  echo "$hasRole"
}

has_same_docker_image() {
  local service_name="$1"
  local expected_image="$2"
  local image
  image="$(get_service_spec "$service_name" '.TaskTemplate.ContainerSpec.Image')"
  if [ "$image" == "$expected_image" ]; then
    echo 'true'
  else
    echo 'false'
  fi
}

has_same_replicas() {
  local service_name="$1"
  local expected_count="$2"
  local count
  count="$(get_service_spec "$service_name" '.Mode.Replicated.Replicas')"
  if [ "$count" == "$expected_count" ]; then
    echo 'true'
  else
    echo 'false'
  fi
}

ensure_network() {
  local service_name="$1"
  docker network inspect "$service_name" &> /dev/null
  if [ "$?" != "0" ]; then
    debug "creating network $service_name"
    run_cmd docker network create --driver overlay "$service_name"
    sleep 10
  fi
}

ensure_service() {
  local service="$1"
  local opt_beekeeper
  local opt_docker_sock
  local opt_role
  local opt_publish
  local opt_traefik
  local opt_run
  local opt_env_add
  local opt_env_rm
  local opt_env
  local opt_with_registry_auth
  local opt_mode
  local opt_replicas
  local opt_logentries
  local opt_image
  local service_name
  local count
  local docker_repo
  local network
  local mode
  local image
  local role
  local dockerSock
  local publish
  local traefikHost
  local traefikPathPrefix
  local runOptions
  local withRegistryAuth
  local logentries
  local envFile
  local beekeeper
  service_name="$(echo "$service" | jq -r '.name')"
  beekeeper="$(echo "$service" | jq -r '.beekeeper')"
  count="$(echo "$service" | jq -r '.count')"
  docker_repo="$(echo "$service" | jq -r '.docker.repo')"
  network="$(echo "$service" | jq -r '.docker.network')"
  mode="$(echo "$service" | jq -r '.docker.mode')"
  image="$(echo "$service" | jq -r '.docker.image')"
  role="$(echo "$service" | jq -r '.docker.role')"
  dockerSock="$(echo "$service" | jq -r '.docker.sock')"
  publish="$(echo "$service" | jq --compact-output -r '.docker.publish[]' 2>/dev/null)"
  traefikHost="$(echo "$service" | jq -r '.traefik.host')"
  traefikPathPrefix="$(echo "$service" | jq -r '.traefik.pathPrefix')"
  runOptions="$(echo "$service" | jq --compact-output -r '.docker.runOptions[]' 2>/dev/null)"
  withRegistryAuth="$(echo "$service" | jq -r '.docker.withRegistryAuth')"
  logentries="$(echo "$service" | jq -r '.docker.logentries')"
  envFile="$(echo "$service" | jq -r '.envFile')"
  local labelFlag='--label'
  local mountFlag='--mount'
  local publishFlag='--publish'
  local constraintFlag='--constraint'
  local isUpdate='false'
  if [ "$(get_service_spec "$service_name")" != "null" ] && [ "$(get_service_spec "$service_name")" != "" ]; then
    isUpdate='true'
    labelFlag='--label-add'
    mountFlag='--mount-add'
    publishFlag='--publish-add'
    constraintFlag='--constraint-add'
  fi
  if [ "$envFile" == "null" ]; then
    envFile="$STACK_ENV_DIR/$service_name.env"
  fi
  if [ "$network" == "null" ]; then
    network="traefik"
  fi
  if [ "$mode" == "null" ]; then
    mode="replicated"
  fi
  if [ "$mode" == "replicated" ]; then
    if [ "$(has_same_replicas "$service_name" "$count")" == 'false' ]; then
      opt_replicas="--replicas $count"
    fi
  fi
  opt_mode="--mode $mode"
  if [ "$image" == "null" ]; then
    if [ "$docker_repo" == "null" ]; then
      image="$(swarm-get-latest-docker-url "octoblu/$service_name")"
    else
      image="$(swarm-get-latest-docker-url "$docker_repo")"
    fi
  fi
  if [ "$beekeeper" == "null" ]; then
    beekeeper="true"
  fi
  if [ "$beekeeper" == "true" ]; then
    opt_beekeeper="$labelFlag octoblu.beekeeper.update=true"
  fi
  if [ "$beekeeper" == "false" ]; then
    opt_beekeeper="$labelFlag octoblu.beekeeper.update=false"
  fi
  if [ "$withRegistryAuth" == "true" ]; then
    opt_with_registry_auth="--with-registry-auth"
  fi
  if [ "$dockerSock" == "true" ]; then
    if [ "$(has_docker_socket "$service_name")" != 'true' ]; then
      opt_docker_sock="$mountFlag type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock"
    fi
  fi
  if [ "$role" != "null" ]; then
    if [ "$(has_role "$service_name" "$role")" != 'true' ]; then
      opt_role="$constraintFlag node.role==$role"
    fi
  fi
  if [ "$traefikHost" != "null" ]; then
    local frontendRule="Host:$traefikHost"
    if [ "$traefikPathPrefix" != "null" ]; then
      frontendRule="${frontendRule};PathPrefix:${traefikPathPrefix}"
    fi
    opt_traefik="$labelFlag traefik.frontend.rule=${frontendRule} $labelFlag traefik.port=80 $labelFlag traefik.docker.network=traefik"
  fi
  if [ "$logentries" == "true" -a -n "$OCTOSWARM_LOGENTRIES_TOKEN" ]; then
    opt_logentries="--log-driver logentries --log-driver logentries-token=$OCTOSWARM_LOGENTRIES_TOKEN"
  fi

  for port in $publish; do
    opt_publish="$opt_publish $publishFlag $port"
  done

  for option in $runOptions; do
    opt_run="$opt_run $option"
  done

  ensure_network "$network"

  run_cmd docker login --username "$DOCKER_HUB_USERNAME" --password "$DOCKER_HUB_PASSWORD" > /dev/null
  if [ "$isUpdate" == "true" ]; then
    debug 'updating service'
    if [ "$(has_same_docker_image "$service_name" "$image")" != 'true' ]; then
      opt_image="--image $image"
    fi
    opt_env_add="$(get_env_add_options "$service_name" "$envFile")"
    opt_env_rm="$(get_env_rm_options "$service_name" "$envFile")"
    run_cmd docker service update \
      $opt_docker_sock \
      $opt_role \
      $opt_traefik \
      $opt_beekeeper \
      $opt_with_registry_auth \
      $opt_image \
      $opt_env_add \
      $opt_env_rm \
      $opt_logentries \
      "$service_name"
  else
    debug 'creating service'
    if [ -f "$envFile" ]; then
      opt_env="--env-file $envFile"
    fi
    run_cmd docker service create \
      --name "$service_name" \
      --network "$network" \
      $opt_mode \
      $opt_replicas \
      $opt_publish \
      $opt_docker_sock \
      $opt_role \
      $opt_traefik \
      $opt_beekeeper \
      $opt_with_registry_auth \
      $opt_logentries \
      $opt_env \
      "$image" \
        $opt_run
  fi
}

main() {
  local service_name
  while [ "$1" != "" ]; do
    local param="$1"
    local value="$2"

    case "$param" in
      -h | --help)
        usage
        exit 0
        ;;
      -v | --version)
        version
        exit 0
        ;;
      *)
        if [ "${param::1}" == '-' ]; then
          echo "ERROR: unknown parameter \"$param\""
          usage
          exit 1
        fi
        if [ -z "$service_name" ]; then
          service_name="$param"
        fi
        ;;
    esac
    shift
  done

  assert_required_config
  assert_required_params "$service_name"

  is_stack_empty || fatal 'Not initialized, run `create-cluster`'

  local services=( $(get_config_array '.services[]') )
  local _service_name
  local exit_code
  for service in "${services[@]}"; do
    _service_name="$(get_service_name "$service")"
    if [ "$service_name" == "$_service_name" ]; then
      ensure_service "$service"
      exit_code=$?
      SERVICE_SPEC_CACHE=""
      exit $exit_code
    fi
  done
}

main "$@"
